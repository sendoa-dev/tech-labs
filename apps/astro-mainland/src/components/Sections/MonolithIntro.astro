---
const { t } = Astro.props
---

<section id="monorepo" class="bg-gray-950/50 text-gray-100 py-24">
  <div class="max-w-5xl mx-auto px-6 text-center">
    <h2 class="text-3xl font-bold mb-6">{t.heading}</h2>
    <p class="text-lg text-gray-300 mb-6">{t.p1}</p>
    <p class="text-gray-400 mb-6">{t.p2}</p>
    <p class="text-gray-400 mb-6">{t.p3}</p>
    <p class="text-gray-400">{t.p4}</p>
  </div>
</section>
