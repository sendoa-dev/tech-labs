---
const { t } = Astro.props
---

<section id="how-i-work" class="bg-black/50 text-gray-100 py-24">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-3xl font-bold mb-12 text-center">{t.heading}</h2>
    <ul class="grid md:grid-cols-2 gap-10">
      {t.items.map(item => (
        <li>
          <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
          <p>{item.description}</p>
        </li>
      ))}
    </ul>
  </div>
</section>
