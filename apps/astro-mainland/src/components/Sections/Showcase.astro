---
const { t } = Astro.props
---

<section id="showcase" class="bg-black/50 text-gray-100 py-24">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold mb-12 text-center">{t.heading}</h2>
    <div class="grid md:grid-cols-2 gap-8">
      {t.items.map(item => (
        <div class="border border-gray-700 rounded-xl p-6">
          <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
          <p class="text-gray-400">{item.description}</p>
          {item.link && (
            <a href={item.link} class="text-blue-400 hover:underline mt-2 inline-block">View Project â†’</a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
